.container_two
  .col.s3
    %div
      .margin-top
        .center-content
          - if @user.profile.avatar.attached?
            = image_tag(@user.profile.avatar, class: "medium-profile-image-home") if @user.profile.avatar.persisted?
          - else
            = image_tag(@user.profile.avatar_attachment_path,class: "medium-profile-image-home")
          %span.text-dark{style: "font-size:2.7rem;"}
          .script_first_second_name
            - if @user.profile.first_name && @user.profile.second_name
              #{@user.profile.first_name} #{@user.profile.second_name}
        %br/
        .center-content
          - if current_user.friend_with?(@user)
            = link_to 'Delete Friend', invitations_destroy_path(invitation_id: Invitation.find_invitation(current_user.id, @user.id)),
                        data: { confirm: "Are you sure you want to delete this friend?" }, class: "waves-effect waves-light btn-small"
          - else
            - if @user != current_user
              = link_to 'Add Friend', invitations_create_path(ids: {id1: current_user.id, id2: @user.id}),
                                           class: "waves-effect waves-light btn-small"
        %br/
        .center-content
          - if current_user != @user
            = link_to 'Send Message', new_room_path(profile_id: @user.profile.id),
            class: "waves-effect waves-light btn-small"
        .card-panel.hoverable
          - if @user.profile.birthday
            Birthday:
            = @user.profile.birthday
          - else
            Birthday: not indicated
          %br
          - if @user.profile.locate
            Locate:
            = @user.profile.locate
          - else
            Locate: not indicated
          %br
    - if current_user == @user
      %ul.collapsible
        %li
          .folding-header
            %i.material-icons peoplealt
            = link_to user_path(current_user), class: "text-decoration-none", style: "color: black;" do
              My Friends
        %li
          .folding-header
            %i.material-icons chat
            %span= link_to "My Messages", rooms_path(user_id:current_user.id), style: "color: black;"
        %li
          .folding-header
            %i.material-icons add
            %span= link_to "Add Post", new_post_path(profile_id: current_user.profile.id), style: "color: black;"
        %li
          .folding-header
            %i.material-icons search
            %span= link_to "Find Post", posts_path(id:current_user.profile.id), style: "color: black;"
        %li
          .folding-header
            %i.material-icons settings
            %span= link_to "Edit Profile", edit_profile_path(current_user.profile.id), style: "color: black;"
    - if @user.interests.presence
      %p.center-content
      .script_interests
        - if current_user == @user
          My Interests
          = link_to edit_users_interest_path(user_id: current_user) do
            %i.material-icons edit
        -else
          #{@user.profile.first_name} Interests
      .panel-menu.item
        - @user.interests.each do |interest|
          %span.label.info= interest.title

