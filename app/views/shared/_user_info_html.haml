.container
  .row
    .col-md-4
    .col-md-4
      .container
        - if current_user.avatar.attached?
          = image_tag current_user.avatar ,:class=>"medium-profile-image center-content"
          %h3.center-content
            = current_user.username
          %h5.center-content
            %span= link_to "view my profile", current_user
            %span= pluralize(current_user.posts.count, "post")
    .col-md-4