%div{style:"margin: 30px"}
  .shadow-sm.pt-3.pl-4.pr-4.pb-3.mt-3
    .d-flex.justify-content-between
      %div
        %div
          - @posts.each do |post|
            = link_to post.user, class: "text-decoration-none" do
              = image_tag(post.user.avatar, :class => "rounded-circle mr-2", size: "30x30", alt: "Profile pic")
            %strong
              %span{style: "font-size:0.9rem"}= post.heading
            %br/
            %div
              %small.text-muted.ml-3.pl-4{style: "font-size:0.7rem"}
                #{time_ago_in_words(post.created_at)} ago
            .text-decoration-none
              %span.content
                = post.content
                = image_tag post.picture.url if post.picture?
            .dropdown-menu
              = link_to "Delete post", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" },
               class: "dropdown-item"
              = link_to "Edit post", edit_post_path(id: post.id)
            .new{:id => "post-id-#{post.id}"}
              = link_to "Comment", new_post_comment_path(post), method: :get, class: "btn btn-secondary btn-small",
               style: "margin-right: 15px", remote: true
            %hr.solid/
  %br/