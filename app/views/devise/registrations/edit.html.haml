- content_for(:title, 'Edit Account')
.container
  .container
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .d-flex
        %h4.mb-3.ml-3 Edit Account
      .field
        = f.input :email, label: "Email", autofocus: true, autocomplete: "email", input_html: { class: 'form-text' }
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{ resource.unconfirmed_email }
      .field
        = f.input :password, label: "New Password", autocomplete: "new-password", input_html: { class: 'form-text' }
      .field
        = f.input :current_password, label: "Current Password", autocomplete: "current-password",
          input_html: { class: 'form-text' }
      .d-flex.justify-content-between
        .actions
          = f.submit "Save", class: "btn text-white rounded-pill bg-color"
    %h3 Cancel my account
    %p
      Unhappy? #{ link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete }
