<% content_for(:title, 'Edit Account') %>
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="d-flex">
      <h4 class="mb-3 ml-3">Edit Account</h4>
    </div>
    <div class="field">
      <%= f.label :username, "Username" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "bg-light" %>
    </div>

    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "Password" %><br />
      <%= f.password_field :password, autocomplete: "new-password", help: "leave blank if you don't want to change it" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Password Confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "Current Password" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", help: "we need your current password to confirm your changes" %>
    </div>
    <div class="d-flex justify-content-between">
      <div class="actions">
        <%= f.submit "Save", class: "btn text-white rounded-pill bg-color" %>
      </div>
    </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
