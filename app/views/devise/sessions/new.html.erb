<% content_for(:title, 'Sign In') %>
<div class="container">
  <%= render 'devise/shared/form' %>
  <div class="pb-5 col-lg-5 col-md-5">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="pt-2 shadow pb-4 mt-5 container col-lg-7 col-md-12 mb-5">
        <div class="field mt-3">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, "Password" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-light" %>
        </div>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small text-dark" %><br />
        <% end %>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me, class: "custom-checkbox", include_hidden: false %>
          </div>
        <% end %>

        <div class="actions d-flex justify-content-center mt-3">
          <%= f.submit "Sign In", class: "btn btn-default btn-primary"%>
        </div>
        <p class="text-center mt-3">OR</p>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn shadow btn-block btn-primary text-white mb-1" do %>
              <i class="fab fa-facebook"></i> Sign In with <%= OmniAuth::Utils.camelize(provider) %>
            <% end %>
          <% end %>
        <% end %>
        <p class="text-muted small text-center text-dark mt-2">By continuing, you agree to Kartmans <strong>Terms of Service, Privacy policy</strong>.</p>
        <div class="d-flex justify-content-center mt-4">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "small text-decoration-none text-center" %><br />
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
