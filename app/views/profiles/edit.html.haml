.container
  .row
    .col-md-3
    .col-md-6
      %h1 Set your profile
      %br/
      = simple_form_for @profile  do |f|
        = f.hidden_field :id, value:@profile.id
        .form-group
          = f.label :first_name
          = f.text_field :first_name, class:"form-control"
        .form-group
          = f.label :second_name
          = f.text_field :second_name, class:"form-control"
        .form-group
          = f.label :locate
          = f.text_field :locate, class:"form-control"
        .field.mb-4
          = f.date_field :birthday, autofocus: true
        .custom-file
          = f.label :avatar, class:"custom-file-label"
          = f.file_field :avatar, class:"custom-file-input"
        = f.submit "Set changes", class:"btn btn-secondary", style:"margin-top:1rem;"
  .col-md-3