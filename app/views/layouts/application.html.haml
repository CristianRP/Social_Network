!!!
%html
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }/
    %title RailsSocialNetwork
    %meta{ content: "width=device-width,initial-scale=1", name: "viewport" }/
    = csrf_meta_tags
    = csp_meta_tag
    %link{ href: "https://cdn.jsdelivr.net/npm/social-likes/dist/social-likes_birman.css", rel: "stylesheet" }/
    %link{ href: "https://vjs.zencdn.net/7.8.4/video-js.css", rel: "stylesheet" }/
    %link{ href: "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css", rel: "stylesheet" }/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

    %script{ src: "https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" }
    %script{ src: "https://code.jquery.com/jquery-3.5.1.min.js" }

    %script{ src: "https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" }
    %script{ src: "https://cdn.jsdelivr.net/npm/social-likes/dist/social-likes.min.js" }

    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }/


  %body
    .topnav
      = render 'include/auth/auth_header'
      %a.dropdown-trigger.right{ "data-target" => "dropdown-language", href: "#", style: "top: -20px;" }
        %i.material-icons.right language
      %ul#dropdown-language.dropdown-content
        %li
          = link_to "English", { locale: 'en' }
        %li
          = link_to "Russian", { locale: 'ru' }
    = render 'include/main/notification'
    = yield
