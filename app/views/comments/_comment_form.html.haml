.comment-form.container.shadow.bg-white.pb-3
  .container
    .row
      .col-md-3
      .col-md-6
        = simple_form_for @comment, method: :post, html: { multipart: true } do |f|
          .form-group
          = f.hidden_field :comment_id, :value => @comment.id
          = f.text_area :text_comment, hide_label: true, placeholder: "Write your comment", input_group_class: 'trix-comment', required: true
          %br/
          .custom-file
            = f.file_field :picture
          %br/
          = f.button :submit, class: "btn btn-primary"
    .col-md-3